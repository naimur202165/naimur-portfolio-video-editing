---
import CallToAction from "../components/CallToAction.astro";
import Icon from "../components/Icon.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const graphics = [
  {
    title: "Modern Poster Design",
    image: "/assets/graphics/poster1.jpg",
  },
  {
    title: "Social Media Banner",
    image: "/assets/graphics/banner1.jpg",
  },
  {
    title: "Event Flyer",
    image: "/assets/graphics/flyer1.jpg",
  },
  {
    title: "Logo Concept",
    image: "/assets/graphics/logo1.jpg",
  },
];
---

<BaseLayout
  title="Graphics Gallery"
  description="A showcase of my graphic design works."
>
  <section class="graphics-section">
    <div class="header">
      <h2>Featured Graphics</h2>
      <CallToAction href="/">
        Back Home
        <Icon icon="arrow-right" size="1.2em" />
      </CallToAction>
    </div>
    <div class="graphics-grid">
      {
        graphics.map((graphic) => (
          <div class="graphic-card">
            <img src={graphic.image} alt={graphic.title} loading="lazy" />
            <h3>{graphic.title}</h3>
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>

<style>
  .graphics-section {
    margin-top: 4rem;
  }
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  h2 {
    font-size: var(--text-2xl);
    color: var(--gray-0);
  }
  .graphics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  .graphic-card {
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: box-shadow var(--theme-transition);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .graphic-card:hover {
    box-shadow: var(--shadow-md);
  }
  img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-bottom: 1px solid var(--gray-800);
  }
  h3 {
    font-size: var(--text-lg);
    padding: 1rem;
    margin: 0;
    color: var(--gray-200);
    text-align: center;
  }
  @media (min-width: 50em) {
    .graphics-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

</BaseLayout>

<style>
  /* Basic reset and global styles (adjust as needed for your project) */
  body {
    margin: 0;
    font-family: sans-serif; /* Example font */
    line-height: 1.6;
  }

  /* Assuming 'wrapper' is for limiting content width and centering */
  .wrapper {
    width: 100%;
    max-width: 1200px; /* Example max-width */
    margin: 0 auto;
    padding: 0 1rem; /* Add some padding on the sides */
  }

  /* Assuming 'stack' is for vertical spacing */
  .stack > * + * {
    margin-top: 1rem; /* Default spacing between stacked elements */
  }

  /* Responsive adjustments for 'stack' */
  .stack.gap-8 > * + * {
    margin-top: 2rem; /* Increased spacing */
  }

  .stack.gap-20 > * + * {
    margin-top: 5rem; /* Even more spacing */
  }

  @media (min-width: 50em) {
    .stack.gap-20 > * + * {
      margin-top: 12rem; /* Largest spacing on larger screens */
    }
    .stack.gap-8 > * + * {
      margin-top: 2rem; /* Increased spacing */
    }
  }

  /* Mobile-first styles */
  .section {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr; /* Stack elements on mobile */
    grid-template-areas:
      "header"
      "gallery";
  }

  .section.with-cta {
    grid-template-areas:
      "header"
      "gallery"
      "cta"; /* Stack CTA below gallery */
  }

  .with-background {
    position: relative;
  }

  .with-background::before {
    --hero-bg: var(--bg-image-subtle-2);

    content: "";
    position: absolute;
    pointer-events: none;
    left: 50%;
    width: 100vw;
    aspect-ratio: calc(2.25 / var(--bg-scale));
    top: 0;
    transform: translateY(-75%) translateX(-50%);
    background:
      url("/assets/backgrounds/noise.png") top center/220px repeat,
      var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
      var(--gray-999);
    background-blend-mode: overlay, normal, normal, normal;
    mix-blend-mode: var(--bg-blend-mode);
    z-index: -1;
  }

  .with-background.bg-variant::before {
    --hero-bg: var(--bg-image-subtle-1);
  }

  .section-header {
    justify-self: center;
    text-align: center;
    max-width: 50ch;
    font-size: var(--text-md);
    color: var(--gray-300);
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  .gallery {
    grid-area: gallery;
  }

  .cta {
    grid-area: cta;
  }

  /* Desktop Styles */
  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas: "header header header header" "gallery gallery gallery gallery";
      gap: 5rem;
    }

    .section.with-cta {
      grid-template-areas: "header header header cta" "gallery gallery gallery gallery";
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      font-size: var(--text-4xl);
    }

    .with-cta .section-header {
      justify-self: flex-start;
      text-align: left;
    }
  }
</style>

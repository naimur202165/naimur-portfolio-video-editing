<div class="orb-container">
  <div class="orb orb-1"></div>
  <div class="orb orb-2"></div>
  <div class="orb orb-3"></div>
</div>

<style>
  .orb-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(45deg, var(--accent-light), var(--accent-regular));
    animation-delay: -2s;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: linear-gradient(45deg, var(--accent-regular), var(--accent-dark));
    animation-delay: -1s;
    right: 10%;
  }

  .orb-3 {
    width: 250px;
    height: 250px;
    background: linear-gradient(45deg, var(--accent-dark), var(--accent-light));
    bottom: 10%;
    left: 20%;
    animation-delay: -3s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg) scale(1);
    }
    25% {
      transform: translate(10%, 15%) rotate(90deg) scale(1.1);
    }
    50% {
      transform: translate(-5%, -10%) rotate(180deg) scale(0.9);
    }
    75% {
      transform: translate(-15%, 5%) rotate(270deg) scale(1.05);
    }
  }

  :root.theme-dark .orb {
    opacity: 0.15;
    mix-blend-mode: screen;
  }

  @media (min-width: 50em) {
    .orb-1 {
      width: 600px;
      height: 600px;
    }
    .orb-2 {
      width: 450px;
      height: 450px;
    }
    .orb-3 {
      width: 350px;
      height: 350px;
    }
  }
</style>
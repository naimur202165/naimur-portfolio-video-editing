---
import Icon from '../Icon.astro';
import type { BentoItem } from '../../types/bento';

interface Props {
  item: BentoItem;
}

const { item } = Astro.props;
---

<div class={`bento-item ${item.class}`}>
  <div class={`bento-content ${item.gradient}`}>
    {item.icon && (
      <div class="icon-wrapper">
        <Icon icon={item.icon} size="2em" />
      </div>
    )}
    <h3>{item.title}</h3>
    {item.description && <p>{item.description}</p>}
    {item.items && (
      <ul class="item-list">
        {item.items.map(listItem => (
          <li>{listItem}</li>
        ))}
      </ul>
    )}
    {item.type === 'video' && item.link && (
      <a href={item.link} class="video-link" target="_blank" rel="noopener noreferrer">
        Watch Video <Icon icon="arrow-right" size="1.2em" />
      </a>
    )}
  </div>
</div>

<style>
  .bento-item {
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .bento-item:hover {
    transform: translateY(-4px);
  }

  .bento-content {
    height: 100%;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background-color: var(--gray-999);
    color: var(--gray-0);
  }

  :global(.theme-dark) .bento-content {
    background-color: var(--gray-950);
    color: var(--gray-200);
  }

  .icon-wrapper {
    background: var(--accent-regular);
    width: fit-content;
    padding: 0.75rem;
    border-radius: 0.75rem;
    color: var(--gray-999);
  }

  h3 {
    font-size: var(--text-xl);
    font-weight: 600;
    margin: 0;
    color: inherit;
  }

  p {
    font-size: var(--text-md);
    opacity: 0.9;
    margin: 0;
  }

  .item-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .item-list li {
    font-size: var(--text-sm);
    opacity: 0.9;
  }

  .video-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: inherit;
    text-decoration: none;
    font-weight: 500;
    margin-top: auto;
  }

  .video-link:hover {
    text-decoration: underline;
  }
</style>